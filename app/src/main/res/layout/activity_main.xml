<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Widok"
        android:layout_width="445dp"
        android:layout_height="185dp"
        android:layout_marginTop="68dp"
        android:ellipsize="middle"
        android:fontFamily="sans-serif-black"
        android:text="Pytanie"
        android:textColor="@color/purple_700"
        android:textColorHighlight="@color/teal_200"
        android:textColorLink="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/wpisz"
        android:layout_width="484dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:background="@color/purple_200"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="@color/teal_700"
        android:text="OdpowiedÅº"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Widok" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:width="100"
        android:height="25"
        android:background="@drawable/ic_launcher_background"
        android:onClick="nauczka"
        android:text="NAUKA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brudnopis" />

    <Button
        android:id="@+id/brudnopis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100"
        android:height="25"
        android:onClick="brud"
        android:text="BRUDNOPIS"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton5"
        android:layout_width="93dp"
        android:layout_height="82dp"
        android:clickable="true"
        android:onClick="spraw"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wpisz"
        app:rippleColor="#4CAF50"
        app:srcCompat="@android:drawable/ic_media_play" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:width="100"
        android:height="25"
        android:text="Sejwuj"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/Widok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100"
        android:height="25"
        android:onClick="reset"
        android:text="Reset"
        app:backgroundTint="@color/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>